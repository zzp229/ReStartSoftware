<Window x:Class="重启软件.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:重启软件"
        mc:Ignorable="d"
        Title="MainWindow" Height="145" Width="180"
        WindowStartupLocation="CenterScreen"
        >
    <StackPanel>
        <Button Content="关闭" Click="Close" Width="80" Height="30"></Button>
        <Button Content="打开" Click="Open" Width="80" Height="30"></Button>
        <Button Content="自动" Click="Auto" Width="80" Height="30"></Button>
    </StackPanel>
</Window>
